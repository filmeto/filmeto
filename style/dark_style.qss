QWidget {
    font-size: 14px;
}

/* 所有 QPushButton 的样式 */
QPushButton{
    font-family: iconfont;
    font-size:20px;
    background-color: none;
    color: #C0C0C0;
    margin:0px;
    border: none;
    border-radius: 5px;
}


QPushButton:hover {
    background-color: #616161;
    margin:0px;
}

QPushButton:pressed {
    background-color: #005a9e;
}

QPushButton:checked {
    background-color: #005a9e;
    color: #FFFFFF;
}

QToolBar{
    background: background;
}

QToolButton{
    font-family: "Segoe UI", "Helvetica Neue", "Noto Sans", "DejaVu Sans", sans-serif;
    font-size:12px;
    background-color: none;
    color: #E1E1E1;
    border: none;
    border-radius: 5px;
    text-align: center;
    padding-left:10px;
    padding-right:20px;
}

QToolButton::menu-indicator{
    font-family: "Segoe UI", "Helvetica Neue", "Noto Sans", "DejaVu Sans", sans-serif;
    font-size:12px;
    width: 8px;
    height: 8px;
    subcontrol-position: right center;
    padding-right:20px;
}

QToolButton::icon {
    padding-right:20px;
}

QToolButton:hover {
    background-color: #717171;
}

QToolButton:pressed {
    background-color: #005a9e;
}

QSplitter::handle{
    width:1px;
    background-color: #323436;
}

