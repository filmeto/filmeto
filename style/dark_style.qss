/* Agent Chat Members Widget */
QWidget#agent_chat_members_widget {
    background-color: #2b2b2b;
}

QListWidget#agent_chat_members_list {
    background-color: #2b2b2b;
    alternate-background-color: #2d2d2d;
    color: #ffffff;
    border: none;
    outline: none;
}

QListWidget#agent_chat_members_list::item {
    background-color: #2b2b2b;
    border-bottom: 1px solid #333333;
    padding: 0px;  /* Remove default padding to allow custom widget to control spacing */
