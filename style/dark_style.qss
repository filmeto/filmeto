}

/* Soul Details Dialog Styles */
QDialog#soulDetailsDialog {
    background-color: #252526;
}

QDialog#soulDetailsDialog QTabWidget::pane {
    background-color: #252526;
    border: 1px solid #454545;
}

QDialog#soulDetailsDialog QTabWidget::tab-bar {
    left: 5px;
}

QDialog#soulDetailsDialog QTabBar::tab {
    background-color: #3C3C3C;
    color: #FFFFFF;
    padding: 6px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QDialog#soulDetailsDialog QTabBar::tab:selected {
    background-color: #454545;
}

QDialog#soulDetailsDialog QTextEdit {
    background-color: #2D2D2D;
    color: #FFFFFF;
    border: 1px solid #454545;
    border-radius: 4px;
}

QDialog#soulDetailsDialog QLineEdit {
    background-color: #2D2D2D;
    color: #FFFFFF;
    border: 1px solid #454545;
    border-radius: 4px;
}

QDialog#soulDetailsDialog QPushButton {
    background-color: #007ACC;
    color: white;
    border-radius: 4px;
    padding: 6px;
}

QDialog#soulDetailsDialog QPushButton[text="Close"],
QDialog#soulDetailsDialog QPushButton[text="Save"] {
    background-color: #3C3C3C;
}

QDialog#soulDetailsDialog QPushButton:hover {
    background-color: #0088EE;
}

QDialog#soulDetailsDialog QPushButton[text="Close"]:hover,
QDialog#soulDetailsDialog QPushButton[text="Save"]:hover {
    background-color: #454545;
}

