/* Skills Panel Styles */

/* Skills Grid Container */
QWidget#skillsGridContainer {
    background-color: #252526;
}

/* Individual Skill Item */
QWidget#skillItem {
    background-color: #3C3C3C;
    border-radius: 12px;
    border: 1px solid #454545;
}

QWidget#skillItem:hover {
    background-color: #454545;
    border: 1px solid #555555;
}

/* Skill Item Icon */
QWidget#skillItem QLabel {
    background-color: #2D2D2D;
    border-radius: 30px;
    color: #AAAAAA;
    font-family: "iconfont";
    font-size: 24px;
}

/* Skill Item Name Label */
QWidget#skillItem QLabel[objectName="skillNameLabel"] {
    color: #FFFFFF;
    font-size: 12px;
    font-weight: bold;
    margin-top: 4px;
}

/* Skill Item Description Label */
QWidget#skillItem QLabel[objectName="skillDescLabel"] {
    color: #AAAAAA;
    font-size: 10px;
    margin-top: 2px;
}

/* Skill Item Buttons */
QWidget#skillItem QPushButton {
    border-radius: 4px;
    font-size: 9px;
    padding: 4px;
}

QWidget#skillItem QPushButton[text="Edit"] {
    background-color: #007ACC;
    color: white;
}

QWidget#skillItem QPushButton[text="Delete"] {
    background-color: #CC0000;
    color: white;
}

QWidget#skillItem QPushButton[text="Edit"]:hover {
    background-color: #0088EE;
}

QWidget#skillItem QPushButton[text="Delete"]:hover {
    background-color: #EE0000;
}

/* Souls Panel Styles */

/* Souls Grid Container */
QWidget#soulsGridContainer {
    background-color: #252526;
}

/* Individual Soul Card */
