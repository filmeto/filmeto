}

/* Soul Card Photo Frame */
QWidget#soulCard QLabel[objectName="soulPhotoFrame"] {
    background-color: #2D2D2D;
    border-radius: 8px;
    color: #AAAAAA;
    font-family: "iconfont";
    font-size: 24px;
}

/* Soul Card Description Label */
QWidget#soulCard QLabel[objectName="soulDescLabel"] {
    color: #AAAAAA;
    font-size: 10px;
    margin-top: 4px;
}

/* Soul Card Buttons */
QWidget#soulCard QPushButton {
    border-radius: 4px;
    font-size: 9px;
    padding: 4px;
}

QWidget#soulCard QPushButton[text="View"] {
    background-color: #007ACC;
    color: white;
}

QWidget#soulCard QPushButton[text="Delete"] {
    background-color: #CC0000;
    color: white;
}

QWidget#soulCard QPushButton[text="View"]:hover {
