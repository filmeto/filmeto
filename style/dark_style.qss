}

/* Startup Widget */
QWidget#startup_widget {
    background-color: #2b2b2b;
}

QWidget#startup_top_bar {
    background-color: #1e1f22;
    border-bottom: 1px solid #3c3f41;
}

QWidget#startup_right_panel {
    background-color: #2b2b2b;
}

/* Startup Tabs */
QTabWidget#startup_tabs {
    background-color: #2b2b2b;
    border: 1px solid #3c3f41;
    border-radius: 4px;
}

QTabWidget#startup_tabs::pane {
    background-color: #2b2b2b;
    border: none;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    margin-top: 0;
}

QTabWidget#startup_tabs QTabBar {
    background-color: #2b2b2b;
}

QTabWidget#startup_tabs QTabBar::tab {
    background-color: #2d2d2d;
    color: #888888;
    padding: 8px 16px;
    margin-right: 2px;
    border: 1px solid #3c3f41;
    border-bottom: 2px solid #3c3f41;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom: none;
    min-width: 100px;
    text-align: center;
}

QTabWidget#startup_tabs QTabBar::tab:selected {
    color: #E1E1E1;
    background-color: #3c3f41;
    border: 1px solid #3c3f41;
    border-bottom: 2px solid #4080ff; /* 使用品牌蓝色作为选中指示器 */
    font-weight: 500;
}

QTabWidget#startup_tabs QTabBar::tab:hover:!selected {
    color: #CCCCCC;
    background-color: #353535;
    border: 1px solid #454545;
    border-bottom: 2px solid #454545;
}

/* Scroll Areas */
QScrollArea#project_info_scroll_area {
    background-color: transparent;
    border: none;
}

QScrollArea#project_info_scroll_area::viewport {
    background-color: transparent;
}

QScrollArea#project_info_scroll_area > QWidget {
    background-color: transparent;
}

QScrollArea#project_info_scroll_area > QWidget > QWidget {
    background-color: transparent;
}

QWidget#project_info_scroll_content {
    background-color: transparent;
}

