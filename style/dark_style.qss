}

QPushButton#chat_tab_button:hover,
QPushButton#project_info_tab_button:hover {
    color: #CCCCCC;
    background-color: #353535;
    border: 1px solid #454545;
    border-bottom: 2px solid #454545;
}

QPushButton#chat_tab_button:unchecked,
QPushButton#project_info_tab_button:unchecked {
    background-color: #2d2d2d;
    color: #888888;
