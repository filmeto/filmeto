}

QToolBar#agent_chat_members_toolbar {
    background-color: #363636;
    border: none;
    padding: 5px;
}

QLineEdit#agent_chat_members_search {
    background-color: #3c3c3c;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 4px;
    color: #ffffff;
}

QPushButton#agent_chat_members_add_button {
    background-color: #4a4a4a;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 4px;
    color: #ffffff;
    font-family: "iconfont";
    min-width: 24px;
    min-height: 24px;
}

QPushButton#agent_chat_members_add_button:hover {
    background-color: #5a5a5a;
}

QPushButton#agent_chat_members_add_button:pressed {
    background-color: #3a3a3a;
}

