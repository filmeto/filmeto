}

/* Tab-like Buttons for Startup Tabs */
QPushButton#chat_tab_button,
QPushButton#project_info_tab_button {
    background-color: #2d2d2d;
    color: #888888;
    border: 1px solid #3c3f41;
    border-bottom: 2px solid #3c3f41;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
    min-width: 100px;
    text-align: center;
    font-size: 14px;
}

QPushButton#chat_tab_button:checked,
QPushButton#project_info_tab_button:checked {
    color: #E1E1E1;
    background-color: #3c3f41;
    border: 1px solid #3c3f41;
